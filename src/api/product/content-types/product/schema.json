{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 70,
      "minLength": 3
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "description": {
      "type": "richtext",
      "required": false,
      "maxLength": 150
    },
    "price": {
      "type": "integer",
      "required": true
    },
    "slug": {
      "type": "uid",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "t-shirt",
        "pant",
        "shoes",
        "belt",
        "tie"
      ]
    },
    "availableQty": {
      "type": "integer",
      "required": true
    }
  }
}
